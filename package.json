{
  "name": "nodejs-design-patterns-book",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "engineStrict": true,
  "scripts": {
    "clean": "rm -rf build",
    "test": "eslint src",
    "build:assets": "NODE_ENV=production webpack",
    "build:eleventy": "NODE_ENV=production eleventy",
    "watch:assets": "webpack --watch",
    "watch:eleventy": "eleventy --serve",
    "dev": "npm-run-all build:assets --parallel watch:*",
    "build": "npm-run-all clean build:assets build:eleventy",
    "deploy": "gh-pages -d build --dotfiles",
    "start": "npm run dev",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book.git"
  },
  "author": "Luciano Mammino, Mario Casciaro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book/issues"
  },
  "homepage": "https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book#readme",
  "devDependencies": {
    "@11ty/eleventy": "3.0.0-alpha.3",
    "@11ty/eleventy-img": "^3.1.8",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@toycode/markdown-it-class": "^1.2.4",
    "babel-loader": "^9.1.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "bulma": "^0.9.4",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "csso": "^5.0.5",
    "date-fns": "^3.0.6",
    "eleventy-plugin-toc": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "file-loader": "^6.1.0",
    "hasha": "^6.0.0",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "mini-css-extract-plugin": "^2.7.6",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "purgecss": "^5.0.0",
    "sass": "^1.26.10",
    "sass-loader": "^13.3.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "dependencies": {
    "@11ty/eleventy-fetch": "^4.0.0"
  }
}