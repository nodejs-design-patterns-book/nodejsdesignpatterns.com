{
  "name": "nodejs-design-patterns-book",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "index.js",
  "engines": {
    "node": ">=12"
  },
  "engineStrict": true,
  "scripts": {
    "clean": "rm -rf build",
    "test": "eslint src",
    "build:assets": "NODE_ENV=production webpack",
    "build:eleventy": "NODE_ENV=production eleventy",
    "watch:assets": "webpack --watch",
    "watch:eleventy": "eleventy --serve",
    "dev": "npm-run-all build:assets --parallel watch:*",
    "build": "npm-run-all clean build:assets build:eleventy",
    "deploy": "gh-pages -d build --dotfiles",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book.git"
  },
  "author": "Luciano Mammino, Mario Casciaro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book/issues"
  },
  "homepage": "https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-cache-assets": "^2.0.3",
    "@11ty/eleventy-img": "^0.5.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@toycode/markdown-it-class": "^1.2.4",
    "babel-loader": "^8.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "bulma": "^0.9.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.2",
    "csso": "^4.0.3",
    "date-fns": "^2.16.1",
    "eleventy-plugin-toc": "^1.1.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.1.0",
    "hasha": "^5.2.0",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^6.0.0",
    "mini-css-extract-plugin": "^0.11.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "purgecss": "^4.1.3",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}