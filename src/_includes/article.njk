---
layout: layout
highlight: true
og_image_width: 1200
og_image_height: 669
eleventyComputed:
  og_site_name: "{{ site.name | safe }}"
  og_image: "{% generateShareImage title %}"
  og_type:
    "og:type": article
  og_locale: "{{ site.locale | safe }}"
  fb_app_id: "{{ site.facebookAppId }}"
---
{% from "analytics.njk" import track with context %}

<section class="hero is-medium bg-green bd-rd">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{ title }}
      </h1>
    </div>
  </div>
</section>

<div class="bg-green article">
  <section class="section bd-lt bg-white is-small">
    <div class="container">
      <div class="columns is-variable is-8">
        <article class="column is-three-quarters">
          <div class="author-info">
            <p>
              <span class="written-by-icon is-hidden-mobile">
                <svg xmlns="http://www.w3.org/2000/svg" 
                  aria-label="Written by" role="img"
                  viewBox="0 0 24 24"
                  width="1em" height="1em">
                  <path fill="currentColor" d="M19 20H5a1 1 0 0 0 0 2h14a1 1 0 0 0 0-2z"/>
                  <path fill="currentColor" d="M5 18h.09l4.17-.38a2 2 0 0 0 1.21-.57l9-9a1.92 1.92 0 0 0-.07-2.71L16.66 2.6A2 2 0 0 0 14 2.53l-9 9a2 2 0 0 0-.57 1.21L4 16.91a1 1 0 0 0 .29.8A1 1 0 0 0 5 18zM15.27 4L18 6.73l-2 1.95L13.32 6z"/>
                </svg>
              </span>
              <span class="is-hidden-mobile">Published by </span>
              <a href="{{ author_link }}">
                <img alt="{{ author }}'s profile picture" src="{{ author_profile_pic }}"/>
                {{ author }}
              </a>
              <span class="is-hidden-mobile">on</span>
              &nbsp;{{ page.date.toUTCString() }}
            </p>
          </div>
          <main class="content">
            {{ content | safe }}
          </main>
        </article>

        <aside class="column is-one-quarter">
          <div class="wrapper-sticky">
            <div class="aside-ad-block">
